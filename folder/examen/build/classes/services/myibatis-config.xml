<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

<typeAliases>
	<typeAlias type="entites.Marques" alias="Marques"/>
	<typeAlias type="entites.Vehicules" alias="Vehicules"/>
</typeAliases>

<environments default="development">
	<environment id="development">
		<transactionManager type="JDBC"/>
		<dataSource type="POOLED">
			<property name="driver" value="com.mysql.jdbc.Driver"/>
			<property name="url" value="jdbc:mysql://localhost:3306/vehicules?useUnicode=yes&amp;characterEncoding=UTF8"/>
			<property name="username" value="root" />
			<property name="password" value="" />
		</dataSource>
	</environment>
</environments>

<mappers>
	<mapper resource="services/MarquesXmlMapper.xml"/>
	<mapper resource="services/VehiculesXmlMapper.xml"/>
</mappers>

</configuration>